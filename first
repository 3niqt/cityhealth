  <div class="card">
    <h2>Client</h2>
    <p>Book now or walk in.</p>
    <button class="btn" onclick="showForm('walkin')">Walk-in</button>
    <button class="btn" onclick="showForm('appointment')">Appointment</button>

    <!-- Walk-in Form -->
    <form id="walkinForm" onsubmit="return confirmPrivacy(event)">
      <h3>Walk-in Form</h3>
      <label>Name</label>
      <input type="text" required>
      <label>Age</label>
      <input type="number" required>
      <label>Email</label>
      <input type="email" required>
      <label>Purpose</label>
      <textarea required></textarea>
      <label>Place</label>
      <input type="text" required>
      <button type="submit" class="btn submit-btn">Submit</button>
    </form>

    <!-- Appointment Form -->
    <form id="appointmentForm" onsubmit="return confirmPrivacy(event)">
      <h3>Appointment Form</h3>
      <label>Name</label>
      <input type="text" required>
      <label>Age</label>
      <input type="number" required>
      <label>Email</label>
      <input type="email" required>
      <label>Purpose</label>
      <textarea required></textarea>
      <label>Place</label>
      <input type="text" required>
      <label>Date</label>
      <input type="date" required>
      <label>Time</label>
      <input type="time" required>
      <button type="submit" class="btn submit-btn">Submit</button>
    </form>
  </div>

  <!-- Privacy Notice Modal -->
  <div id="privacyModal" class="modal">
    <div class="modal-content">
      <h3>Privacy Notice</h3>
      <p>Your personal information will be collected and processed in compliance with data privacy regulations. Do you agree to proceed?</p>
      <button class="agree-btn" onclick="proceedSubmit()">I Agree</button>
      <button class="cancel-btn" onclick="closeModal()">Cancel</button>
    </div>
  </div>

  <script>
    let currentForm = null;

    function showForm(type) {
      document.getElementById("walkinForm").style.display = "none";
      document.getElementById("appointmentForm").style.display = "none";

      if (type === "walkin") {
        document.getElementById("walkinForm").style.display = "block";
      } else {
        document.getElementById("appointmentForm").style.display = "block";
      }
    }

    function confirmPrivacy(event) {
      event.preventDefault();
      currentForm = event.target;
      document.getElementById("privacyModal").style.display = "flex";
      return false;
    }

    function proceedSubmit() {
      alert("Form submitted successfully!");
      currentForm.reset();
      closeModal();
    }

    function closeModal() {
      document.getElementById("privacyModal").style.display = "none";
    }
  </script>

